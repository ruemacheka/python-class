#ex1
name="Rue"
age=33
print(f"Hello, my name is {name} and I am {age} years old.")

#ex2
num1=int(input("Enter first number: "))
num2=int(input("Enter second number: "))
print(f"The sum of {num1} and {num2} is {num1+num2}")

#ex3 identify data types 

int_var = 10
float_var = 10.5
string_var = "Hello"
bool_var = True
print(type(int_var), type(float_var), type(string_var), type(bool_var))

# ex4  Perform Arithmetic Operations
number1=int(input("Enter first number: "))
number2=int(input("Enter second number: "))
print("Addition",number1+number2)
print("Subtraction", number1-number2)
print("Multiplication", number1*number2)
print("Divide", number1/number2)
print("Modulus", number1%number2)


# 5. Conditional Logic
num = int(input("Enter a number: "))
if num > 0:
    print("Positive")
elif num < 0:
    print("Negative")
else:
    print("Zero")

# 6. Even or Odd
num1 = int(input("Enter a number: "))
if num1 % 2 == 0:
    print("even")
else:
    print("odd")


# 7. For Loop with Range
for i in range(1, 6):
    print(i)

# 8. Factorial with While Loop
num = int(input("Enter a number: "))
factorial = 1
while num > 0:
    factorial *= num
    num -= 1
print("Factorial:", factorial)

# 9. Function to Add Numbers
def add_numbers(a, b):
    return a + b

result = add_numbers(3, 4)
print("Sum:", result)

# 10. Function with Default Arguments
def greet(name="Guest"):
    return f"Hello, {name}!"

print(greet("Alice"))
print(greet())